<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.baidu.mapapi.map.MapView  
        android:id="@+id/bmapView"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
	
    <TextView 
        android:id="@+id/alarm"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="17dp"
        android:background="#DDFFA601"
        android:visibility="gone"
          />
    <RelativeLayout
        android:id="@+id/main_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_buttom_barp" >

        <LinearLayout
            android:id="@+id/main_bar_main"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/bus_line_show"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/gong"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/main_bar_drop_button"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical|right"
                android:background="#00000000"
                android:clickable="true"
                android:src="@drawable/btn_drop_1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_bar_drop_layout"
            android:layout_below="@id/main_bar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/main_bar_station_show"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/change_line"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:gravity="center"
                    android:text="@string/change_line"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/station_alarm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:gravity="center"
                    android:text="@string/station_alarm"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/chooseFL"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:visibility="gone">
    </ListView>

</RelativeLayout>